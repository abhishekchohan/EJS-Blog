<% include partials/header %>

<h1>
    <strong>Compose</strong>
</h1>

<!-- Form that will send post data to server to add that info in posts array -->

<form method="POST" action="/compose">
    <div class="form-group">
        <label for="postTitle">Title</label>
        <input class="form-control" autocomplete="off" type="text" id="postTitle" name="postTitle" />
    </div>
    <div class="form-group">
        <label for="postBody">Post</label>
        <textarea class="form-control" id="postBody" name="postBody" rows="5"></textarea>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-dark">Publish</button>
    </div>
</form>

<% include partials/footer %>